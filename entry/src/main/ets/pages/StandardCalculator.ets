  clickDecimal(): void {
    if (!this.currentNumber.includes('.')) {
      if (this.isOperatorClicked || this.currentNumber === '') {
        this.currentNumber = '0.';
        this.isOperatorClicked = false;
      } else if (this.isEqualClicked) {
        this.firstNumber = 0;
        this.currentNumber = '0.';
        this.isEqualClicked = false;
        this.prevOperator = '';
        this.prevSecondNumber = 0;
      } else {
        this.currentNumber += '.';
      }
